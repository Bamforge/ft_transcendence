{
	"name": "game",
	"version": "1.0.0",
	"description": "",
	"main": "dist/server.js",
	"scripts": {
		"build:server": "tsc -p tsconfig.server.json",
		"build:client": "tsc -p tsconfig.client.json",
		"build:css": "npx @tailwindcss/cli -i ./src/public/assets/css/tailwindcss.css -o ./dist/public/assets/css/style.css",
		"copy:assets": "cp -r src/public/assets/images dist/public/assets/ && cp -r src/public/assets/audio dist/public/assets/ && cp -r src/views dist/views/",
		"build": "npm run clean && npm run build:server && npm run build:client && npm run build:css && npm run copy:assets",
		"start": "tsc -w & nodemon dist/server/server.js",
		"dev": "ts-node index.ts",
		"lint": "eslint . --ext .js,.ts,.mjs,.cjs --config ./config/eslint.config.mjs",
		"fmt": "prettier --write . --config ./config/.prettierrc",
		"docs": "jsdoc -c jsdoc.json",
		"clean": "rm -rf ./dist/* ",
		"re": "npm run clean && npm run build && npm run start"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"type": "commonjs",
	"dependencies": {
		"@fastify/cookie": "^11.0.2",
		"@fastify/cors": "^11.0.1",
		"@fastify/formbody": "^8.0.2",
		"@fastify/static": "^8.1.1",
		"@fastify/view": "^11.1.0",
		"autoprefixer": "^10.4.21",
		"bcryptjs": "^3.0.2",
		"dotenv": "^16.5.0",
		"ejs": "^3.1.10",
		"fastify": "^5.3.3",
		"jsonwebtoken": "^9.0.2",
		"postcss": "^8.5.3",
		"sqlite": "^5.1.1",
		"sqlite3": "^5.1.7"
	},
	"devDependencies": {
		"@babel/core": "^7.27.1",
		"@babel/preset-typescript": "^7.27.1",
		"@eslint/js": "^9.26.0",
		"@tailwindcss/cli": "^4.0.0",
		"@types/bcryptjs": "^2.4.6",
		"@types/ejs": "^3.1.5",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/node": "^22.15.2",
		"eslint": "^9.26.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.4.0",
		"globals": "^16.1.0",
		"jsdoc": "^4.0.4",
		"jsdoc-babel": "^0.5.0",
		"nodemon": "^3.1.10",
		"prettier": "^3.5.3",
		"tailwindcss": "^4.0.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.0"
	}
}
